{
  "name": "spt-deep",
  "version": "1.0.0",
  "description": "SPT-Deep - The Infinite Thought Engine",
  "main": "dist/main/main/index.js",
  "author": "SmartPoints Team",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && NODE_ENV=development electron .",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "package": "npm run build && electron-builder",
    "package:mac": "npm run build && electron-builder --mac",
    "package:win": "npm run build && electron-builder --win",
    "package:linux": "npm run build && electron-builder --linux",
    "package:dir": "npm run build && electron-builder --dir",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "deploy:azure": "powershell -ExecutionPolicy Bypass -File scripts/deploy-azure.ps1",
    "deploy:coder": "powershell -ExecutionPolicy Bypass -File scripts/deploy-coder-template.ps1",
    "workspace:create": "powershell -ExecutionPolicy Bypass -File scripts/create-workspace.ps1"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.67.0",
    "@azure/identity": "^4.0.0",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tooltip": "^1.0.7",
    "ajv": "^8.6.3",
    "ajv-formats": "^2.1.1",
    "atomically": "^1.7.0",
    "better-sqlite3": "^9.4.0",
    "bindings": "^1.5.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "conf": "10.2.0",
    "debounce-fn": "^4.0.0",
    "dot-prop": "6.0.1",
    "electron-log": "^5.0.3",
    "electron-store": "^8.1.0",
    "env-paths": "^2.2.1",
    "fast-deep-equal": "^3.1.3",
    "fast-uri": "^3.0.1",
    "file-uri-to-path": "^2.0.0",
    "find-up": "^3.0.0",
    "framer-motion": "^11.0.3",
    "is-obj": "2.0.0",
    "json-schema-traverse": "^1.0.0",
    "json-schema-typed": "^7.0.3",
    "locate-path": "^3.0.0",
    "lucide-react": "^0.312.0",
    "mimic-fn": "3.1.0",
    "onetime": "^5.1.2",
    "p-limit": "^2.0.0",
    "p-locate": "^3.0.0",
    "p-try": "^2.0.0",
    "path-exists": "^3.0.0",
    "pkg-up": "^3.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-flow-renderer": "^10.3.17",
    "react-router-dom": "^6.21.3",
    "require-from-string": "^2.0.2",
    "semver": "^7.3.5",
    "tailwind-merge": "^2.2.1",
    "tslib": "^2.8.1",
    "type-fest": "^5.1.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/better-sqlite3": "^7.6.9",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^1.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^27.0.1",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-plugin-electron": "^0.28.2",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^1.2.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "tech.smartpoints.spt-deep",
    "productName": "SPT-Deep",
    "asar": false,
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*",
      "node_modules/electron-store/**/*",
      "node_modules/conf/**/*",
      "node_modules/pkg-up/**/*",
      "node_modules/find-up/**/*",
      "node_modules/locate-path/**/*",
      "node_modules/p-locate/**/*",
      "node_modules/p-limit/**/*",
      "node_modules/p-try/**/*",
      "node_modules/path-exists/**/*",
      "node_modules/dot-prop/**/*",
      "node_modules/is-obj/**/*",
      "node_modules/ajv/**/*",
      "node_modules/ajv-formats/**/*",
      "node_modules/atomically/**/*",
      "node_modules/debounce-fn/**/*",
      "node_modules/env-paths/**/*",
      "node_modules/json-schema-typed/**/*",
      "node_modules/onetime/**/*",
      "node_modules/semver/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.png",
      "identity": null,
      "target": [
        {
          "target": "dir",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "better-sqlite3",
      "electron",
      "esbuild"
    ]
  }
}
